{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": true,
    "isolatedModules": false,
    "types": ["express"],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "build"],
  "include": ["**/*.ts", "**/*.tsx", "./node/**/*.ts", "./node/**/*tsx"]
}
